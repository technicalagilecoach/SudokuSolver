<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SudokuSolver.GUI.ViewModels"
        xmlns:local="using:SudokuSolver.GUI.Views"
        xmlns:converters="using:SudokuSolver.GUI.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="SudokuSolver.GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
Title="Sudoku Solver"
         Width="1200" Height="700"
         MinWidth="1050" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Resources>
        <converters:BooleanToPlayPauseStringConverter x:Key="BooleanToPlayPauseStringConverter"/>
        <converters:SelectedToBackgroundConverter x:Key="SelectedToBackgroundConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Load Puzzle..." Command="{Binding LoadPuzzleFromFileCommand}"/>
                <MenuItem Header="Save Puzzle..." Command="{Binding SavePuzzleToFileCommand}"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Clear Puzzle" Command="{Binding SudokuGrid.ClearPuzzleCommand}"/>
                <MenuItem Header="Clear Cell" Command="{Binding SudokuGrid.ClearCellCommand}"/>
            </MenuItem>
            <MenuItem Header="Solve">
                <MenuItem Header="Solve Puzzle" Command="{Binding SudokuGrid.SolvePuzzleCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="Auto" MinWidth="200"/>
                <ColumnDefinition Width="300" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- Sudoku Grid -->
            <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <local:SudokuGridControl DataContext="{Binding SudokuGrid}"/>
            </Grid>

            <!-- Control Panel -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0" MinWidth="200">
                <Separator Margin="0,0,0,10"/>
                
                <Button Content="Clear Cell" Command="{Binding SudokuGrid.ClearCellCommand}" Margin="0,0,0,10"/>
                <Button Content="Solve Puzzle" Command="{Binding SudokuGrid.SolvePuzzleCommand}" Margin="0,0,0,10"/>
                <Button Content="Clear Puzzle" Command="{Binding SudokuGrid.ClearPuzzleCommand}" Margin="0,0,0,10"/>

                <Separator Margin="0,20,0,10"/>
                
                <TextBlock Text="Status" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding SudokuGrid.Status}" Margin="0,0,0,10"/>
                
                <ProgressBar IsVisible="{Binding SudokuGrid.IsSolving}" Margin="0,0,0,10" IsIndeterminate="True"/>
            </StackPanel>

            <!-- Solving Steps Panel -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Margin="20,0,0,0" MinWidth="250">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Steps Header -->
                    <TextBlock Grid.Row="0" Text="Solving Steps" FontWeight="Bold" FontSize="16" Margin="10,10,10,5"/>

                    <!-- Playback Controls -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5" HorizontalAlignment="Center">
                        <Button Content="⏮" Command="{Binding SolvingSteps.StepBackwardCommand}" Margin="2" Width="30" Height="30"/>
                        <Button Content="{Binding SolvingSteps.IsPlaying, Converter={StaticResource BooleanToPlayPauseStringConverter}}" 
                                Command="{Binding SolvingSteps.PlayPauseCommand}" Margin="2" Width="30" Height="30"/>
                        <Button Content="⏭" Command="{Binding SolvingSteps.StepForwardCommand}" Margin="2" Width="30" Height="30"/>
                        <Button Content="⏹" Command="{Binding SolvingSteps.ResetCommand}" Margin="2" Width="30" Height="30"/>
                        <Button Content="⏩" Command="{Binding SolvingSteps.GoToEndCommand}" Margin="2" Width="30" Height="30"/>
                    </StackPanel>

                    <!-- Steps List -->
                    <ScrollViewer Grid.Row="2" Margin="10,5">
                        <ItemsControl ItemsSource="{Binding SolvingSteps.Steps}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" 
                                            Background="{Binding IsSelected, Converter={StaticResource SelectedToBackgroundConverter}}"
                                            Margin="0,2" Padding="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding StepNumber}" FontWeight="Bold" Margin="0,0,5,0"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding StrategyName}" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Description}" FontSize="11" Foreground="Gray"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Steps Status -->
                    <StackPanel Grid.Row="3" Margin="10">
                        <TextBlock Text="Playback Speed" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Slider Value="{Binding SolvingSteps.PlaybackSpeed}" Minimum="100" Maximum="3000" TickFrequency="100" 
                                IsSnapToTickEnabled="True" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SolvingSteps.Status}" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
